@using RecruiterBE.Responses;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Recruiters Ville</title>
    <link rel="shortcut icon" href="/images/fevicon.png" sizes="16x16" type="text/png">
    @Styles.Render("~/content/superuserlayout")
    <!--Custom Font-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
</head>
<body>
    @if (Session["UserLogin"] != null)
            {
                LoginResponse response = (LoginResponse)Session["UserLogin"];
                string userprofilepic = string.IsNullOrEmpty(response.ProfilePicPath) ? "http://placehold.it/50/30a5ff/fff" : response.ProfilePicPath;

        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/user/dashboard"><span>Recruiters Ville </span>Admin</a>
                    <div class="pull-right navbar-link swich">
                        <a href="/user/dashboard"> <i class="fa fa-toggle-on" aria-hidden="true"></i>
 <span>Switch to User </span>Admin</a>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </nav>
            <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
                <div class="profile-sidebar">
                    <div class="profile-userpic">
                        <img src="@userprofilepic" id="imgprofilepic" class="img-responsive" alt="">
                    </div>
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">@response.Name</div>
                        <div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="divider"></div>
                <ul class="nav menu">
                    <li class="active"><a href="/superuser/dashboard"><em class="fa fa-dashboard">&nbsp;</em> Dashboard</a></li>
                    <li><a href="/superuser/companies"><em class="fa fa-clone">&nbsp;</em> Companies</a></li>
                    <li><a href="/superuser/jobs"><em class="fa fa-briefcase">&nbsp;</em> Jobs</a></li>
                    <li><a href="/superuser/profiles"><em class="fa fa-user">&nbsp;</em> Profiles</a></li>
                    <li><a href="/account/logout"><em class="fa fa-power-off">&nbsp;</em> Logout</a></li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                @RenderBody()
            </div>
    }
    @Scripts.Render("~/bundles/superuserlayout")
</body>
</html>
