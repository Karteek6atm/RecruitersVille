
@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

@Styles.Render("~/content/myjobs")
<link href="/app/css/bootstrap-table.css" rel="stylesheet" />

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="javascript:void(0)">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Jobs</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <input type="hidden" id="hiddenloginid" value="@ViewBag.LoginId" />
        <input type="hidden" id="hiddencompanyid" value="@ViewBag.CompanyId" />
    </div>
</div><!--/.row-->


<div class="panel" style="display:block">
    <div class="row">
        <div class="col-lg-12">
            <div id="divalertinfo" class="alert bg-info" role="alert" style="display:none;"><em class="fa fa-lg fa-info-circle">&nbsp;</em> <span id="spanalertinfo">Welcome to the admin dashboard panel bootstrap template</span> <a href="javascript:void(0)" onclick="closemessage(this)" class="pull-right"><em class="fa fa-lg fa-close"></em></a></div>
            <div id="divalertsuccess" class="alert bg-success" role="alert" style="display:none;"><em class="fa fa-lg fa-check-circle">&nbsp;</em> <span id="spanalertsuccess">Welcome to the admin dashboard panel bootstrap template</span> <a href="javascript:void(0)" onclick="closemessage(this)" class="pull-right"><em class="fa fa-lg fa-close"></em></a></div>
            <div id="divalertwarning" class="alert bg-warning" role="alert" style="display:none;"><em class="fa fa-lg fa-warning">&nbsp;</em> <span id="spanalertwarning">Welcome to the admin dashboard panel bootstrap template</span> <a href="javascript:void(0)" onclick="closemessage(this)" class="pull-right"><em class="fa fa-lg fa-close"></em></a></div>
            <div id="divalertdanger" class="alert bg-danger" role="alert" style="display:none;"><em class="fa fa-lg fa-times-circle">&nbsp;</em> <span id="spanalertdanger">Welcome to the admin dashboard panel bootstrap template</span> <a href="javascript:void(0)" onclick="closemessage(this)" class="pull-right"><em class="fa fa-lg fa-close"></em></a></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">Jobs <a href="/job/newjob" class="btn btn-primary pull-right">Add New Job</a></div>
                <input type="hidden" id="hiddenselectedjobid" value="" />
                
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4 pr pl">
                            <ul class="list-group joli" id="uljobs">
                               
                            </ul>
                        </div>
                        <div id="divjobview" class="col-lg-6 pr pl">
                            <div class="panel mijView" id="divjobpanel">
                                <input type="hidden" id="hiddenjobid" />
                                <div class="panel-body" style="height: auto;
                                    max-height: 790px;
                                    overflow: auto;">
                                    <div class="jobits">
                                        <figure>
                                            @*<img id="imgjoblogo" src="~/images/img-3.jpg" />*@
                                            <figcaption>
                                                <h2 id="jobtitle"></h2>
                                                @*<p id="companyname"></p>*@
                                            </figcaption>
                                        </figure>
                                        <ul class="clearfix">
                                            <li id="experience"> <i class="fa fa-suitcase"></i> </li>
                                            <li id="package"> <i class="fa fa-money"></i> </li>
                                            <li id="location"> <i class="fa fa-map-marker"></i> </li>
                                        </ul>
                                    </div>

                                    <div class="jobDesi">
                                        <h3> Job description </h3>
                                        <p id="jobdescription"> </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 pl pr">
                            <ul class="list-group joli jbtns" id="divjobbuttons">
                                <li> <a href="javascript:void(0)" id="aeditjob"> <i class="fa fa-pencil"></i> Edit</a> </li>
                                <li> <a href="javascript:void(0)" id="aviewjob"> <i class="fa fa-eye"></i> View</a> </li>
                                <li> <a href="javascript:void(0)" id="asharejob" onclick="sharejobthroughemail(this)"> <i class="fa fa-envelope"></i> Email</a> </li>
                                <li><input type="hidden" id="hiddenjobstatusid" value="" /> 
                                <a href="javascript:void(0)" id="achangejobstatus" onclick="changejobstatus(this)"> <i class="fa fa-trash-o"></i> Change Status</a> </li>
                                <li onclick="shareonfacebook()"> <div class="btn sfb comb"> Share on   <i class="fa fa-facebook" aria-hidden="true"></i></div> </li>
                                <li onclick="shareontwitter()"> <div class="btn twit comb"> Share on   <i class="fa fa-twitter" aria-hidden="true"></i></div></li>
                                <li onclick="shareonlinkedin()"> <div class="btn lkn comb"> Share on   <i class="fa fa-linkedin" aria-hidden="true"></i></div></li>
                            </ul>
                        </div>

                    </div>
                    <table class="new-tble scrol-tble" style="display:none;">
                        <thead>
                            <tr>
                                <th>
                                    S.No.
                                </th>
                                <th>
                                    Actions
                                </th>
                                <th>
                                    Job Title
                                </th>
                                <th>
                                    Company Job Id
                                </th>
                                <th>
                                    Pay
                                </th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    Experience
                                </th>
                                <th>
                                    Industry
                                </th>
                                <th>
                                    Technologies
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tbodyjobs">
                            <tr>
                                <td colspan="10">
                                    No jobs found.
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div><!--/.panel-->
    </div>
</div>
<!--/.row-->
<div class="modal fade" id="modalchangestatus" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:500px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change Job Status </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closemodalchangestatus">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Job Status <span class="mandatory">*</span></label>
                            <select class="form-control" id="selectjobstatus" onblur="validatedropdown(this)">
                                <option value="0">Select Job Status</option>                               
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Comments <span class="mandatory">*</span></label>
                            <textarea rows="4" class="form-control" placeholder="" id="textstatuscomments" onblur="validatetextbox(this)"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="changejobstatusconfirm()">Update Status</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalsendemail" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:500px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Send Email </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closemodalsendemail">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row"> 
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Send To </label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="emailsendto" id="radioemailcandidate" onchange="CheckEmailSendTo(this)" value="candidate" checked>Candidates
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="emailsendto" id="radioemailvendor" onchange="CheckEmailSendTo(this)" value="vendor">Vendors
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12" id="divemailcandidate" style="display:block;">
                        <div class="form-group">
                            <label>&nbsp; </label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="emailtocandidate" id="radiotomatchedprofiles" onchange="CheckCandidateEmail(this)" value="matchedprofiles" checked>To matched profiles
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="emailtocandidate" id="radiotocandidateemailids" onchange="CheckCandidateEmail(this)" value="emailids">To emailids
                                </label>
                            </div>
                        </div>
                    </div> 
                    <div class="col-md-12" id="divemailvendor" style="display:none;">
                        <div class="form-group">
                            <label>&nbsp; </label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="emailtovendor" id="radiotomatchedvendors" onchange="CheckVendorEmail(this)" value="matchedvendors" checked>To matched vendors
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="emailtovendor" id="radiotovendoremailids" onchange="CheckVendorEmail(this)" value="emailids">To emailids
                                </label>
                            </div>
                        </div>
                    </div> 
                    <div class="col-md-12" id="divsendtoemailids" style="display:none;">
                        <div class="form-group">
                            <label>Email Ids (seperate with comma) <span class="mandatory">*</span></label>
                            <textarea rows="3" class="form-control" placeholder="" id="textsendtoemailids" onblur="validatetextbox(this)"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="SendJobEmail()">Send Email</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
@Scripts.Render("~/bundles/myjobs")
<script type="text/javascript">
    $(document).ready(function () {
        $("#ulsidemenu li").removeClass("active");
        $("#limenujobs").addClass("active");
        getjobslist();
    });
</script>
