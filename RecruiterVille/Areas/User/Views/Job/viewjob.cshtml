
@{
    ViewBag.Title = "viewjob";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<link href="/app/css/bootstrap-table.css" rel="stylesheet" />
<link href="/app/css/datepicker.css" rel="stylesheet" />

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="javascript:void(0)">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li>
            <a id="amyjobslist" href="/job/myjobs">
                My Jobs
            </a>
        </li>
        <li class="active">View Job</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-8 col-lg-offset-2">

        <div class="panel panel-default">
            <div class="panel-heading">
                Job View <a href="/job/myjobs" class="btn btn-primary pull-right ji">Jobs List <i class="fa fa-bars" aria-hidden="true"></i>
</a>
                <a href="javascript:void(0)" onclick="shareonfacebook()" class="btn btn-success pull-right fb">Share on   <i class="fa fa-facebook" aria-hidden="true"></i>
</a>
                <a href="javascript:void(0)" onclick="shareontwitter()" class="btn btn-danger pull-right tw">Share on   <i class="fa fa-twitter" aria-hidden="true"></i>
</a>
                <a href="javascript:void(0)" onclick="shareonlinkedin()" class="btn btn-info pull-right lin">Share on   <i class="fa fa-linkedin" aria-hidden="true"></i>
</a>
            </div>

            <input type="hidden" id="hiddenselectedjobid" value="@ViewBag.JobId" />
            <div class="panel-body">
                <table class="new-tble scrol-tble">
                    <tbody>
                        <tr>
                            <td>Job Title</td>
                            <td> <label id="labeljobtitle"></label></td>
                        </tr>
                        <tr>
                            <td>Company Job Id</td>
                            <td> <label id="labelcompanyjobid"></label></td>
                        </tr>
                        <tr>
                            <td>Job Location</td>
                            <td> <label id="labeljoblocation"></label></td>
                        </tr> 
                        <tr> 
                            <td>Pay</td>
                            <td> <label id="labelpay"></label></td>
                        </tr>
                        <tr>
                            <td>Duration</td>
                            <td> <label id="labelduration"></label></td>
                        </tr>
                        <tr>
                            <td>Experience</td>
                            <td> <label id="labelexperience"></label></td>
                        </tr>
                        <tr>
                            <td>Job Types</td>
                            <td> <label id="labeljobtypes"></label></td>
                        </tr>
                        <tr>
                            <td>Industry</td>
                            <td> <label id="labelindustry"></label></td>
                        </tr> 
                        <tr>
                            <td>Sub Industries</td>
                            <td> <label id="labelsubindustries"></label></td>
                        </tr>
                        <tr>
                            <td>Skills</td>
                            <td> <label id="labelskills"></label></td>
                        </tr>
                        <tr>
                            <td>Travel Allowances</td>
                            <td> <label id="labeltravelallowances"></label></td>
                        </tr>
                        <tr>
                            <td>Is WFH Available</td>
                            <td> <label id="labelwfhavailable"></label></td>
                        </tr>
                        <tr>
                            <td>Application Method </td>
                            <td> <label id="labelapplicationmethod"></label></td>
                        </tr>
                        <tr>
                            <td>Post Dates</td>
                            <td> <label id="labelpostdates"></label></td>
                        </tr>
                        <tr> 
                            <td>Job Status</td>
                            <td> <label id="labeljobstatus"></label></td>
                        </tr>
                       
                        <tr>
                        
                            <td colspan="2"><h6>Desiription</h6> <label id="labeljobdescription"></label></td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div><!--/.panel-->
</div>
<script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="/app/js/bootstrap-datepicker.js"></script>
@Scripts.Render("~/bundles/viewjob")
<script type="text/javascript">
        $(document).ready(function () {
            getjobdetails();
        });
</script>
