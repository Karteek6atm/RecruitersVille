@using RecruiterBE.Responses;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>RecruitersVille  </title>
    
    @if (ViewBag.Response != null)
    {
        SearchJobViewResponse jobdetails = ViewBag.Response;
        <meta property="og:url" content="@ViewBag.JobUrl" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="@jobdetails.JobTitle" />
        <meta property="og:description" content="@jobdetails.JobDescription" />
        <meta property="og:image" content="@ViewBag.JobLogo" />
        <meta property="fb:app_id" content="472213130043391" />
    }

    @Styles.Render("~/content/sitelayout")

    <!-- fav icon-->
    <link rel="shortcut icon" href="/images/fevicon.png" sizes="16x16" type="text/png">
    
    <!-- Font Asewome Icons -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <!-- font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet"> 

</head>
<body>

    <!-- #Fixed top bar >>social icons & Login Register  navbar-fixed-top-->
    <nav class="navbar navbar-inverse menutop">
        <div class="container">
            <div class="navbar-header">

                <a class="navbar-brand" href="#"> </a>
            </div>
            <div class="" id="myNavbar">
                <ul class="nav navbar-nav navbar-right login-bar">
                    <li><a href="#"><i class="fa fa-facebook s-icon"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin s-icon"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter s-icon"></i></a></li>
                    <li><a href="#"><i class="fa fa-pinterest-p s-icon"></i></a></li>
                    <li class="left-devider"><a href="/register" class="account-btn"><span class="hidemob">Register</span> <i class="fa fa-user-plus s-icon2"></i></a></li>
                    <li class="left-devider"><a href="/login" class="account-btn"><span class="hidemob">Login</span> <i class="fa fa-sign-out s-icon2"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- #Ends  Fixed top bar -->
    <!-- >>Navigation navbar-fixed-top-->
    <nav class="navbar navbar-default  menu-nav" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Logo -->
                <a href="/index.html"><img src="/images/logo.png" class="logo" alt="logo"></a>
            </div>
            <!-- Collect the nav links for toggling -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="nav navbar-nav navbar-right topmenu">
                    <li class="active"><a href="/index.html"> Home</a></li>
                    <li><a href="/about.html"> About Us    </a></li>
                    <li id="apackages"><a href="/packages"> Price</a></li>
                    <li id="ajobs"><a href="/jobs"> Careers</a></li>
                    <li id="acontactus"><a href="/contactus"> Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- #Ends Navigation  -->

    <div>
        @RenderBody()
    </div>

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">   <i class="fa fa-facebook"></i> <i class="fa fa-twitter"></i> <i class="fa fa-linkedin"></i> <i class="fa fa-google-plus"></i> <i class="fa fa-pinterest"></i></div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h2>Subscribe<p>Newsletter</p></h2>

                    <form>
                        <input placeholder="Email Address" type="email">
                        <button><img title="" alt="" src="/images/mail-footer.png"> </button>
                    </form>
                </div>
                <div class="col-lg-12"><hr></div>

                <div class="col-lg-12 col-xs-12">
                    <h3>Company Details</h3>
                    <ul>
                        <li><a href="/index.html"><i class="fa fa-angle-double-right"></i>  Home</a></li>
                        <li><a href="/about.html"><i class="fa fa-angle-double-right"></i> About Us</a></li>
                        <li><a href="/packages"><i class="fa fa-angle-double-right"></i>  Price</a></li>
                        <li><a href="/jobs"><i class="fa fa-angle-double-right"></i>  Careers </a></li>
                        <li><a href="/contactus"><i class="fa fa-angle-double-right"></i> Contact Us</a></li>
                        <li><a href="#"><i class="fa fa-angle-double-right"></i>  Terms & Conditions </a></li>
                        <li><a href="#"><i class="fa fa-angle-double-right"></i> Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-lg-12"><hr></div>
                <section class="bottomFooter">
                    <div class="col-lg-12 text-center">Copyright &copy; 2019 Recruitersville,  <a href="#">All right reserved. </a> </div>
                </section>
            </div>
        </div>
    </section>

</body>
</html>
